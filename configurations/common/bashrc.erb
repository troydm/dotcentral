        if [[ $((${BASH_VERSION::1}*10+${BASH_VERSION:2:1})) < 44 ]]; then
          PS1="\[\033[1m\033[38;5;222m\033[48;5;236m\] Î» \[\033[0m\033[38;5;236m\]î‚°\[\033[0m\] "
          PS2="\[\033[0m\033[38;5;222m\033[48;5;236m\] â† \[\033[0m\033[38;5;236m\]î‚°\[\033[0m\] "
        else
          PS1=" Î» \[\033[0m\033[38;5;236m\]î‚°\[\033[0m\] "
          PS2=" â† \[\033[0m\033[38;5;236m\]î‚°\[\033[0m\] "
          bind 'set editing-mode vi'
          bind 'set show-mode-in-prompt on'
          bind 'set vi-ins-mode-string \1\033[1m\033[38;5;222m\033[48;5;236m\2'
          bind 'set vi-cmd-mode-string \1\033[1m\033[37;1m\033[48;5;236m\2'
        fi
    fi
fi
