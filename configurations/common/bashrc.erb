# dircolors
# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# some more ls aliases
alias ls='ls --color'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# useful aliases
alias myip="curl -s icanhazip.com"

# fcd
fcd() { cd "$(fcdclient "$@")"; }
alias z=fcd

# Add bin directory to PATH
export PATH=$PATH:"<%= pwd+"/bin" %>"

# Add powerline prompt
if [[ "$TERM" == "xterm-256color" || "$TERM" == "screen-256color" ]]; then
    if [ -n "$ZSH_VERSION" ]; then
        function precmd(){ powerline 2> /dev/null; }
        PROMPT="%{[1m[38;5;222m[48;5;236m%} Î» %{[0m[38;5;236m%}î‚°%{[0m%} "
    else
        PS1="\[\033[1m\033[38;5;222m\033[48;5;236m\] Î» \[\033[0m\033[38;5;236m\]î‚°\[\033[0m\] "
        PROMPT_COMMAND='powerline 2> /dev/null'
    fi
fi
