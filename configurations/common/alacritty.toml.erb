[colors.bright]
black = "#000000"
blue = "#8cd0d3"
cyan = "#93e0e3"
green = "#bfebbf"
magenta = "#ec93d3"
red = "#dca3a3"
white = "#ffffff"
yellow = "#f0dfaf"

[colors.cursor]
cursor = "CellForeground"
text = "CellBackground"

[colors.normal]
black = "#3f3f3f"
blue = "#6ca0a3"
cyan = "#8cd0d3"
green = "#7f9f7f"
magenta = "#dc8cc3"
red = "#cc9393"
white = "#dcdccc"
yellow = "#d0bf8f"

[colors.primary]
background = "#3f3f3f"
foreground = "#dcdccc"

[colors.selection]
background = "#aaaaaa"
text = "#000000"

[env]
TERM = "xterm-256color"

[font]
<% if osx? %>
size = 14.0
<% else %>
size = 10.0
<% end %>

[font.normal]
family = "DejaVuSansM Nerd Font Mono"
style = "Regular"

<% if osx? %>
[shell]
<% if osx? %>
program = "/bin/zsh"
<% else %>
program = "/bin/bash"
<% end %>
<% end %>

[window]
opacity = 0.85
decorations = "transparent"

[window.padding]
<% if osx? %>
x = 5
y = 25
<% else %>
x = 5
y = 5
<% end %>
